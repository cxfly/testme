<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE sqlMap PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN" "http://ibatis.apache.org/dtd/sql-map-2.dtd">

<sqlMap namespace="system">
<typeAlias alias="systemDO"    type="com.alibaba.testme.domain.dataobject.SystemDO" />

  <resultMap id="systemDO_resultMap" class="systemDO">
    <result property="id" column="ID" />
    <result property="gmtCreate" column="GMT_CREATE" />
    <result property="creator" column="CREATOR" />
    <result property="gmtModified" column="GMT_MODIFIED" />
    <result property="modifier" column="MODIFIER" />
    <result property="name" column="NAME" />
    <result property="remark" column="REMARK" />
  </resultMap>
 

  <sql id="system.column_List">
	     ID
	    ,GMT_CREATE
	    ,CREATOR
	    ,GMT_MODIFIED
	    ,MODIFIER
	    ,NAME
	    ,REMARK 
  </sql>
   
  <sql id="system.queryCondition">
    <dynamic>
      <isNotEmpty property="id" prepend="AND">
        <![CDATA[  
        ID = #id#  
        ]]>  
      </isNotEmpty>
      <isNotEmpty property="creator" prepend="AND">
        <![CDATA[  
        CREATOR = #creator#  
        ]]>  
      </isNotEmpty>
      <isNotEmpty property="modifier" prepend="AND">
        <![CDATA[  
        MODIFIER = #modifier#  
        ]]>  
      </isNotEmpty>
      <isNotEmpty property="name" prepend="AND">
        <![CDATA[  
        NAME = #name#  
        ]]>  
      </isNotEmpty>
    </dynamic>
  </sql>

  
  <insert id="system.add" parameterClass="systemDO">
    INSERT INTO tm_system(
   				GMT_CREATE
   			   ,CREATOR
   			   ,GMT_MODIFIED
   			   ,MODIFIER
   			   ,NAME
   			   ,REMARK) VALUES (
   	            now()
   	           ,#creator#
   	           ,now()
   	           ,#modifier#
   	           ,#name#
   	           ,#remark#)
   	
   	<selectKey keyProperty="id" resultClass="Integer">
      SELECT LAST_INSERT_ID() AS value
    </selectKey>
  </insert>


  <update id="system.update" parameterClass="systemDO">
    UPDATE tm_system set gmtModified=now()
    <dynamic>
      <isNotEmpty property="modifier" prepend=",">
        <![CDATA[  
        MODIFIER = #modifier#  
        ]]>  
      </isNotEmpty>
      <isNotEmpty property="name" prepend=",">
        <![CDATA[  
        NAME = #name#  
        ]]>  
      </isNotEmpty>
      <isNotEmpty property="remark" prepend=",">
        <![CDATA[  
        REMARK = #remark#  
        ]]>  
      </isNotEmpty>
    </dynamic>
     WHERE id = #id#  
  </update>

  <select id="system.findById" parameterClass="Integer" resultMap="systemDO_resultMap">
     SELECT 
    <include refid="system.column_List" />
    <![CDATA[  
     FROM tm_system
     WHERE id = #id#
    ]]>  
  </select>
  
   
  <delete id="system.deleteById" parameterClass="Integer">
    <![CDATA[  
     DELETE FROM tm_system 
      WHERE id = #id#
    ]]>  
  </delete>

  <select id="system.findList" resultMap="systemDO_resultMap" parameterClass="systemDO">
     SELECT 
    <include refid="system.column_List" />
     FROM tm_system
	WHERE 1=1
    <include refid="system.queryCondition" />
  </select>
  
</sqlMap>
