<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE sqlMap PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN" "http://ibatis.apache.org/dtd/sql-map-2.dtd" >

<sqlMap namespace="user" >

  <typeAlias alias="userDO" type="com.alibaba.testme.domain.dataobject.UserDO" />
  <typeAlias alias="userQuery" type="com.alibaba.testme.domain.query.UserQuery" />

  <resultMap id="userDOResultMap" class="userDO" >
    <result property="id" column="id" />
    <result property="gmtCreate" column="gmt_create" />
    <result property="creator" column="creator" />
    <result property="gmtModified" column="gmt_modified" />
    <result property="modifier" column="modifier" />
    <result property="userName" column="user_name" />
    <result property="password" column="password" />
    <result property="wangwang" column="wangwang" />
  </resultMap>
 
  <sql id="user_columns" >
   		<![CDATA[  
		  ID
		 ,gmt_create
		 ,creator
		 ,gmt_modified
		 ,modifier
		 ,user_name
		 ,password
		 ,wangwang
	    ]]>  
  </sql>

  <sql id="user_queryParams" >
    <dynamic prepend="WHERE" >
      <isNotNull property="id" prepend="AND" >
        <![CDATA[  
        id = #id#  
        ]]>  
      </isNotNull>
      <isNotNull property="userName" prepend="AND" >
        <![CDATA[  
        user_name = #userName#  
        ]]>  
      </isNotNull>
    </dynamic>
  </sql>

  <insert id="user.add" parameterClass="userDO" >
   		<![CDATA[  
			insert into tm_user(
			            gmt_create
			           ,creator
			           ,gmt_modified
			           ,modifier
			           ,user_name
			           ,password
			           ,wangwang) values (
					    now()
			           ,#creator#
			           ,now()
			           ,#modifier#
			           ,#userName#
			           ,#password#
			           ,#wangwang#)
		]]>  
    <selectKey keyProperty="id" resultClass="Integer" >
      SELECT LAST_INSERT_ID() AS value
    </selectKey>
  </insert>

  <update id="user.update" parameterClass="userDO" >
    UPDATE tm_user   
    <dynamic prepend="SET" >
      <isNotNull property="userName" prepend="," >
        <![CDATA[  
        user_name = #userName#  
        ]]>  
      </isNotNull>
    </dynamic>
     WHERE id = #id#  
  </update>

  <select id="user.findById" parameterClass="Integer" resultMap="userDOResultMap" >
     SELECT 
    <include refid="user_columns" />
    <![CDATA[  
     FROM tm_user WHERE id = #id#
    ]]>  
  </select>

  <delete id="user.deleteById" parameterClass="Integer" >
    <![CDATA[  
     DELETE FROM tm_user WHERE id = #id#
    ]]>  
  </delete>

  <select id="user.findList" resultMap="userDOResultMap" parameterClass="userQuery" >
     SELECT 
    <include refid="user_columns" />
     FROM tm_user 
    <include refid="user_queryParams" />
  </select>
  
</sqlMap>