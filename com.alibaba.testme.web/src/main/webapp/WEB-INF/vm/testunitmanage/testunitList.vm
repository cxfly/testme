<html>
<head>
	<meta http-equiv="Content-Type" content="text/html; charset=UTF-8"/>
	<meta http-equiv="Content-Language" content="zh-CN"/>
    <title>查询测试单元</title>
</head>

<link href="${contextPath}/res/css/css.css" rel="stylesheet" type="text/css" />
<link href="${contextPath}/res/css/style.css" rel="stylesheet" type="text/css" />
<link href="${contextPath}/res/css/pagination.css" rel="stylesheet" type="text/css" />

</head>
<script type="text/javascript" src="${contextPath}/res/common/commonConfig.js"></script>
<body>
<form id="testunitListForm" name="testunitListForm" method="post" action="${contextPath}/testunitmanage/testunitListByPage">
<div>
    <label name="resultMsg"><font color="red">$!resultMsg</font></label>
</div>
<table width="100%" border="0" cellspacing="0" cellpadding="0">
  <tr>
    <td height="30">
		<table width="100%" border="0" cellspacing="0" cellpadding="0">
			<tr>
			<td height="124" background="${contextPath}/res/images/testme_nav04.gif">
				<table width="98%" border="0" align="center" cellpadding="0" cellspacing="0">
				<tr>
				  <td width="100" align="right">测试单元名称：</td>
				  <td><input name="testunitName" class="text" style="width:180px" type="text" size="40" value="$!testunitQuery.testunitName"/></td>
				  <td width="100" align="right">所属系统：</td>
				  <td>
					<select name="systemId" style="width:180px">
                          <option value="">==请选择==</option>
						  #foreach($systemDO in $systemDOList)
							#if($!systemDO.id==$!testUnitQuery.systemId)
								<option value="$!systemDO.id"  selected="selected">$!systemDO.name</option>
							#else
								<option value="$!systemDO.id">$!systemDO.name</option>
							#end
						  #end
					</select>
				  </td>
				</tr>
				<tr><td>&nbsp;</td></tr>
				<tr>
				  <td width="100" align="right">测试单元编码：</td>
				  <td><input name="testunitCode" class="text" style="width:180px" type="text" value="$!testunitQuery.testunitCode"/></td>
				  <td width="100" align="right">所属工作空间：</td>
				  <td>
					<select name="systemId" style="width:180px">
                          <option value="">==请选择==</option>
						  #foreach($workSpaceDO in $workSpaceDOList)
							#if($!workSpaceDO.id==$!testUnitQuery.workSpaceId)
								<option value="$!workSpaceDO.id"  selected="selected">$!workSpaceDO.name</option>
							#else
								<option value="$!workSpaceDO.id">$!workSpaceDO.name</option>
							#end
						  #end
					</select>
				  </td>
				</tr>
				<tr><td>&nbsp;</td></tr>
				<tr>
				  <td width="100" align="right">标签名称：</td>
				  <td>
					<input name="testunitTag" class="text" style="width:180px" type="text" size="40" value="$!testunitQuery.testunitTag"/>
				    &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<input name="Submit4" type="submit" class="right-button02" value="查 询" />
				  </td>
				</tr>
				<tr><td>&nbsp;</td></tr>
				</table>
			</td>
			</tr>
		</table>
		</br>
	</td>
  </tr>
  <tr>
    <td>
		<table id="subtree1" style="DISPLAY: " width="100%" border="0" cellspacing="0" cellpadding="0">
        <tr>
          <td>
			<table width="95%" border="0" align="center" cellpadding="0" cellspacing="0">
                  <tr>
                    <td height="40" class="font42">
        				<table style="width:100%;" id="testUnitListTable" border="0" cellpadding="4" cellspacing="1" bgcolor="#464646" class="tableFixClass">
        				  <col style="width: 20%" />
						  <col style="width: 20%" />
						  <col style="width: 10%" />
						  <col style="width: 15%" />
						  <col style="width: 20%" />
						  <col style="width: 15%" />
						  <tr class="CTitle" >
                            <td height="22" colspan="6" align="center" style="font-size:16px">测试单元信息列表</td>
                          </tr>
                          <tr bgcolor="#EEEEEE">
                            <td style="width:20%;">测试单元名称</td>
        					<td style="width:20%;">测试单元编码</td>
							<td style="width:10%;">所属系统</td>
							<td style="width:15%;">所属工作空间</td>
							<td style="width:20%;">标签</td>
        					<td style="width:15%;">操作</td>
                          </tr>
						  #foreach($testunitVO in $testunitVOPage.datas)
                          <tr bgcolor="#FFFFFF">                       
        					<td><a href="${contextPath}/testunitmanage/testunitDetail?testunitId=$!testunitVO.testunitId"> $!testunitVO.testunitName</a></td>
                            <td>$!testunitVO.testunitCode</td>
							<td>$!testunitVO.systemName</td>
                            <td>$!testunitVO.workSpaceName</td>
							<td>$!testunitVO.testunitTag</td>
                            <td>
								<a href="${contextPath}/testunitmanage/testunitDetail?testunitId=$!testunitVO.testunitId" target="mainFrame">查看</a>
								#if($testUnitVO.userId==$userId)
    							<a href="${contextPath}/testunitmanage/editTestunit?testunitId=$!testunitVO.testunitId" target="mainFrame">|编辑</a>
								<a href="javascript:void(0)" onclick="delProcess('${contextPath}/testunitmanage/deleteTestunit?testunitId='+$!testunitVO.testunitId)">|删除</a>
								#end
							</td>
                          </tr>
						  #end
						</table>
    				</td>
				  </tr>
			</table>
		    <table width="95%" border="0" align="center" cellpadding="0" cellspacing="0">
				<tr>
				  <td height="33" class="listPage" cellpadding="0" cellspacing="0">
					 $!{pageUtil.genPageToolbar(${testunitVOPage}, 'testunitListForm')}
				  </td>
				</tr>
		    </table>
		  </td>
	    </tr>
		</table>
	</td>
  </tr>
</table>
</form>
</body>
</html>
