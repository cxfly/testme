<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true" scanPeriod="60000" debug="false">

	<contextListener class="ch.qos.logback.classic.jul.LevelChangePropagator"/>

	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">  
	    <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">  
	      <pattern>%date [%thread] %-5level %class - %msg%n</pattern>  
	    </encoder>  
  	</appender> 

	<appender name="CORE" class="ch.qos.logback.core.rolling.RollingFileAppender">
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<fileNamePattern>serviceability/testmelogs/core.%d{yyyy-MM-dd}.log</fileNamePattern>
			<maxHistory>30</maxHistory>
		</rollingPolicy>
		<encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
			<pattern>%date [%thread] %-5level %class - %msg%n</pattern>
		</encoder>
	</appender>

	<root level="ERROR">
		<appender-ref ref="STDOUT" />
	</root>

	<logger name="com.alibaba.testme.core" level="ALL" additivity="false">
		<appender-ref ref="CORE" />
	</logger>
	
	<logger name="com.alibaba.testme.core" level="ALL">
		<appender-ref ref="STDOUT" />
	</logger>
	
</configuration>